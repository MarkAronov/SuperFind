{
	"name": "skillvector",
	"scripts": {
		"start": "SKIP_STATIC_DATA=true bun run src/index.ts",
		"dev": "bun run --hot src/index.ts",
		"dev:quick": "SKIP_STATIC_DATA=true bun run --hot src/index.ts",
		"lint": "biome lint ./src",
		"format": "biome format ./src --write",
		"check": "biome check ./src",
		"check:fix": "biome check ./src --fix",
		"check:format": "biome format ./src --check",
		"check:format:fix": "biome format ./src --check --write",
		"csv:validate": "node scripts/validate-csv.js",
		"csv:normalize": "node scripts/normalize-csv.js --inplace",
		"build:sdk": "cd sdk/typescript && npm run build",
		"prepare": "husky install",
		"check:backend": "biome check ./src",
		"check:frontend": "cd frontend && bun run check",
		"check:all": "bun run check:backend && bun run check:frontend",
		"typecheck:backend": "tsc --noEmit",
		"typecheck:frontend": "cd frontend && tsc --noEmit",
		"typecheck:all": "bun run typecheck:backend && bun run typecheck:frontend",
		"test": "echo 'No tests yet' && exit 0",
		"build:backend": "echo 'Backend builds at runtime with Bun' && exit 0",
		"build:frontend": "cd frontend && npm run build",
		"build:storybook": "cd frontend && bun run build:storybook",
		"audit:backend": "bun audit || echo 'Bun audit failed'",
		"audit:frontend": "cd frontend && bun audit || echo 'Frontend audit failed'",
		"audit:sdk": "cd sdk/typescript && bun audit || echo 'SDK audit failed'",
		"audit:all": "bun run audit:backend && bun run audit:frontend && bun run audit:sdk",
		"build:all": "bun run build:backend && bun run build:sdk && bun run build:frontend",
		"ci-local": "bun run check:all && bun run typecheck:all && bun run test && bun run build:all"
	},
	"dependencies": {
		"@huggingface/inference": "^4.8.0",
		"@langchain/anthropic": "^1.2.3",
		"@langchain/community": "^1.0.7",
		"@langchain/core": "^1.1.4",
		"@langchain/google-genai": "^2.0.4",
		"@langchain/ollama": "^1.0.3",
		"@langchain/openai": "^1.1.3",
		"@langchain/qdrant": "^1.0.1",
		"@qdrant/js-client-rest": "^1.15.1",
		"hono": "^4.9.0",
		"hono-rate-limiter": "^0.4.2",
		"langchain": "^1.1.5",
		"papaparse": "^5.5.3",
		"zod": "^4.1.4"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"@types/bun": "latest",
		"@types/papaparse": "^5.3.16",
		"csv-parse": "^6.1.0",
		"csv-stringify": "^6.6.0"
	},
	"lint-staged": {
		"src/**/*.{ts,tsx,js,jsx}": [
			"biome format --write",
			"biome check --fix"
		],
		"frontend/src/**/*.{ts,tsx,js,jsx}": [
			"bash -c 'cd frontend && biome format --write \"${0#frontend/}\"'",
			"bash -c 'cd frontend && biome check --fix \"${0#frontend/}\"'"
		],
		"src/**/*.{css,scss}": [
			"biome format --write"
		],
		"frontend/src/**/*.{css,scss}": [
			"bash -c 'cd frontend && biome format --write \"${0#frontend/}\"'"
		]
	}
}
