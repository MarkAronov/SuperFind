{
	"compilerOptions": {
		"target": "ES2019",
		"module": "ESNext",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "../../node_modules", "dist"]
}
