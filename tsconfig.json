{
	"compilerOptions": {
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["ESNext"],
		"types": ["bun-types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "build"]
}
